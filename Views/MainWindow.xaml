<Window x:Class="UMLGenerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMLGenerator"
        xmlns:vm="clr-namespace:UMLGenerator.ViewModels.Main"
        xmlns:v="clr-namespace:UMLGenerator.Views.Main"
        mc:Ignorable="d"
        Title="UML Generator" Height="640" Width="1024" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel>
        <DockPanel.Resources>
            <DataTemplate DataType="{x:Type vm:SourceViewModel}">
                <v:SourceView DataContext="{Binding }"/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:UMLViewModel}">
                <v:UMLView DataContext="{Binding }"/>
            </DataTemplate>
        </DockPanel.Resources>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Languages" >
                    <MenuItem Header="C#" IsCheckable="True" IsChecked="True"/>
                </MenuItem>
                <MenuItem Header="_Settings" Command="{Binding SettingsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Views" >
                <MenuItem Header="_Source Selection" Command="{Binding SourceSelectionCommand}"/>
                <MenuItem Header="_PlantUML" Command="{Binding PlantUMLCommand}"/>
            </MenuItem>
            <MenuItem Header="_Export" >
                <MenuItem Header="Export SVG"/>
                <MenuItem Header="Export PNG"/>
                <MenuItem Header="Export PlantUML"/>
            </MenuItem>
        </Menu>
        
        <ContentControl Content="{Binding SelectedViewModel}"/>
    </DockPanel>
</Window>
